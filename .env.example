# =============================================
# Autonomous LeadGen Agent - Environment Variables
# =============================================
# Copy this file to .env and fill in your actual values
# For Vercel: Add these in Project Settings â†’ Environment Variables

# =============================================
# OpenAI Configuration
# =============================================

# Your OpenAI API key (required for email generation)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Default model to use for email generation
DEFAULT_MODEL=gpt-4o

# =============================================
# SendGrid Configuration  
# =============================================

# SendGrid API key for email delivery
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Default sender email address (must be verified in SendGrid)
ALLOWED_SENDER=info@nofabusinessconsulting.com

# Email sending limits (safety guardrails)
SEND_CAP_PER_RUN=20
DAILY_SEND_CAP=200

# =============================================
# Firebase/Firestore Configuration
# =============================================

# Firebase project ID
FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase service account email
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Firebase private key (replace with actual key, keep quotes)
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Firebase database URL (optional)
FIREBASE_DB_URL=https://your-project.firebaseio.com

# =============================================
# Web Scraping & Compliance
# =============================================

# Respect robots.txt when scraping websites
ROBOTS_RESPECT=true

# Rate limiting delay between web requests (seconds)
RATE_LIMIT_DELAY=1.0

# Request timeout for web scraping (seconds)
REQUEST_TIMEOUT=30.0

# =============================================
# Email Compliance & Branding
# =============================================

# Custom unsubscribe text (optional)
OPT_OUT_TEXT=If you'd prefer not to hear from us again, reply with 'unsubscribe'.

# Legal address for email footers (optional)
LEGAL_TEXT=NOFA Business Consulting, LLC --- Gaithersburg, MD

# =============================================
# Agent Behavior
# =============================================

# Maximum number of search results per query
MAX_SEARCH_RESULTS=10

# Minimum confidence score for leads (0.0-1.0)
MIN_LEAD_CONFIDENCE=0.3

# Maximum drafts to generate per job
MAX_DRAFTS_PER_JOB=50

# =============================================
# Development & Debugging
# =============================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode (more verbose logging)
DEBUG=false

# Mock mode (use mock data instead of real APIs)
MOCK_MODE=false

# =============================================
# Security
# =============================================

# API key for external API access (optional)
API_KEY=your-api-key-here

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=*
